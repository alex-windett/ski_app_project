<p id="notice"><%= notice %></p>

<p class="media">
  <b>Image:</b> <br />
  <%= image_tag @medium.image.detail.url if @medium.image.present? %>
</p>

<p class="media">
  <b>Video:</b> <br />
  <%= (video_tag @medium.video, :size => "640x480", :controls => true, :autoplay => true) if @medium.video.present? %>
</p>

<p>
  <b>User:</b>
  <%= @medium.user_id %>
</p>

<p>
  <b>Run:</b>
  <%= @medium.run.name %>
</p>



